{
	"name": "@all1ndev/vue-local-scope",
	"license": "MIT",
	"version": "0.3.1",
	"type": "module",
	"files": [
		"dist"
	],
	"main": "./dist/vue-local-scope.umd.cjs",
	"module": "./dist/vue-local-scope.js",
	"types": "./dist/vue-local-scope.d.ts",
	"exports": {
		".": {
			"types": "./dist/vue-local-scope.d.ts",
			"import": "./dist/vue-local-scope.js",
			"require": "./dist/vue-local-scope.umd.cjs"
		}
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/all1ndev/vue-local-scope.git"
	},
	"keywords": [
		"vue",
		"vue3",
		"composition-api",
		"local-scope"
	],
	"scripts": {
		"dev": "vite",
		"build": "vue-tsc -b && vite build && npm run generate-types",
		"generate-types": "vue-tsc lib/vue-local-scope.ts --declaration --emitDeclarationOnly --outDir dist",
		"preview": "vite preview",
		"test": "vue-tsc -b",
		"release": "npx np"
	},
	"peerDependencies": {
		"vue": "^3.5.26"
	},
	"devDependencies": {
		"@all1ndev/prettier-config": "^2.0.0",
		"@types/node": "^24.10.4",
		"@vitejs/plugin-vue": "^6.0.3",
		"@vitejs/plugin-vue-jsx": "^5.1.3",
		"prettier": "^3.7.4",
		"typescript": "^5.9.3",
		"vite": "^7.3.0",
		"vue": "^3.5.26",
		"vue-tsc": "^3.2.1"
	},
	"prettier": "@all1ndev/prettier-config"
}
